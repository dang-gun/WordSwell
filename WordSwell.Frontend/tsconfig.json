{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [ "src/*" ],
    },
    "allowSyntheticDefaultImports": true,
    "sourceMap": true

  },
  "exclude": [
    "node_modules"
  ]
}
